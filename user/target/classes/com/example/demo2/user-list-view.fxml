<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controller.UserListController">
    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="20">
            <children>
                <Label text="User List" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                <TableView fx:id="userTable" style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-padding: 10px;">
                    <columns>
                        <TableColumn text="Username" fx:id="usernameColumn" style="-fx-font-size: 14px;"/>
                        <TableColumn text="Email" fx:id="emailColumn" style="-fx-font-size: 14px;"/>
                    </columns>
                </TableView>

                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-font-size: 16px; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>
                <Button text="delete selected" onAction="#handleDelete"
                        style="-fx-font-size: 16px; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
