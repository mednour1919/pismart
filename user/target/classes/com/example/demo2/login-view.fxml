<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="339.0" prefWidth="433.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo2.controller.LoginView">
    <children>
        <VBox alignment="CENTER" layoutX="67.0" layoutY="37.0" prefWidth="300" spacing="15">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Login" />

                <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;" />

                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;" />

                <Button onAction="#handleLogin" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;" text="Login" />
                <Button onAction="#switchToSignup" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;" text="go to signup" />
            </children>
        </VBox>
    </children>
</AnchorPane>
