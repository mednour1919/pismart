<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controller.LoginView">
    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="80" layoutY="50" prefWidth="300">
            <children>
                <Label text="Login" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                <TextField fx:id="emailField" promptText="Email"
                           style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;"/>

                <PasswordField fx:id="passwordField" promptText="Password"
                               style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;"/>

                <Button text="Login" onAction="#handleLogin"
                        style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>
                <Button text="go to signup" onAction="#switchToSignup"
                        style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
