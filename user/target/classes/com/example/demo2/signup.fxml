<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="380.0" prefWidth="441.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo2.controller.SignupController">
    <children>
        <VBox alignment="CENTER" layoutX="80" layoutY="50" prefWidth="300" spacing="15">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Sign Up" />

                <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;" />

                <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;" />

                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 10px;" />

                <Button onAction="#handleSignup" style="-fx-font-size: 16px; -fx-background-color: #007BFF; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;" text="Sign Up" />
                <Button onAction="#switchToLogin" style="-fx-font-size: 16px; -fx-background-color: #007BFF; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;" text="Go To login" />
            </children>
        </VBox>
    </children>
</AnchorPane>
