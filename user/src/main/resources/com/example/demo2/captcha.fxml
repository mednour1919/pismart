<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controller.CaptchaController"
      spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="CAPTCHA Verification" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <!-- Display the CAPTCHA code (you might add extra styling/rotation effects) -->
    <Label fx:id="captchaLabel" style="-fx-font-size: 24px; -fx-background-color: lightgray; -fx-padding: 10px; -fx-font-family: 'Courier New';"/>
    <TextField fx:id="captchaInput" promptText="Enter the CAPTCHA code" />
    <Button text="Verify" onAction="#handleVerifyCaptcha" />
    <Button text="Refresh CAPTCHA" onAction="#handleRefreshCaptcha" />
</VBox>
