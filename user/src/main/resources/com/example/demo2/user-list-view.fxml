<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="686.0" prefWidth="372.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo2.controller.UserListController">
    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="20" spacing="15">
            <children>

                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="User List" />
                <HBox spacing="10">
                    <TextField fx:id="searchField" promptText="Search users..." />
                    <Button text="Search" onAction="#handleSearch" />
                    <Button text="Sort by Username" onAction="#handleSort" />
                </HBox>
                <TableView fx:id="userTable" style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-padding: 10px;">
                    <columns>
                        <TableColumn fx:id="usernameColumn" style="-fx-font-size: 14px;" text="Username" />
                        <TableColumn fx:id="emailColumn" style="-fx-font-size: 14px;" text="Email" />
                    </columns>
                </TableView>

                <Button onAction="#handleLogout" style="-fx-font-size: 16px; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;" text="Logout" />
                <Button onAction="#handleDelete" style="-fx-font-size: 16px; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 10px;" text="delete selected" />
            </children>
        </VBox>
    </children>
</AnchorPane>
