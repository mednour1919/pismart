{% extends 'base.html.twig' %}

{% block title %}Contribution index{% endblock %}

{% block body %}
    <h1>Contribution index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Type</th>
                <th>Date_creation</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contribution in contributions %}
            <tr>
                <td>{{ contribution.id }}</td>
                <td>{{ contribution.message }}</td>
                <td>{{ contribution.type }}</td>
                <td>{{ contribution.dateCreation ? contribution.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contribution.statut }}</td>
                <td>
                    <a href="{{ path('app_contribution_show', {'id': contribution.id}) }}">show</a>
                    <a href="{{ path('app_contribution_edit', {'id': contribution.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contribution_new') }}">Create new</a>
{% endblock %}
