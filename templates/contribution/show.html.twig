{% extends 'base.html.twig' %}

{% block title %}Contribution{% endblock %}

{% block body %}
    <h1>Contribution</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contribution.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contribution.message }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ contribution.type }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ contribution.dateCreation ? contribution.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ contribution.statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contribution_index') }}">back to list</a>

    <a href="{{ path('app_contribution_edit', {'id': contribution.id}) }}">edit</a>

    {{ include('contribution/_delete_form.html.twig') }}
{% endblock %}
