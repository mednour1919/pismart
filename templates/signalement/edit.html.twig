{% extends 'base.html.twig' %}

{% block title %}Modifier le Signalement{% endblock %}

{% block body %}
    <h1>Modifier le Signalement</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        
        {% if current_image %}
            <div class="mb-3">
                <label class="form-label">Image actuelle</label>
                <div>
                    <img src="data:image/jpeg;base64,{{ current_image }}" 
                         alt="Image du signalement" 
                         style="max-height: 200px;">
                </div>
            </div>
        {% endif %}
        
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('app_signalement_index') }}" class="btn btn-secondary">
            Retour Ã  la liste
        </a>
        
        {{ include('signalement/_delete_form.html.twig') }}
    </div>
{% endblock %}