{% extends 'base.html.twig' %}

{% block title %}Modifier Dépense Projet{% endblock %}

{% block body %}
    <h1>Modifier Dépense Projet</h1>

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.montant) }}
        {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.montant) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.projet) }}
        {{ form_widget(form.projet, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.projet) }}
    </div>

    <button class="btn btn-primary">Mettre à jour</button>

    {{ form_end(form) }}

    {{ include('depense_projet/_delete_form.html.twig') }}

    <a href="{{ path('app_depense_projet_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
